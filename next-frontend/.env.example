###############################################
# SERVER CONFIGURATION
###############################################

# Secret used to sign JWT tokens.
# IMPORTANT: Change this to a long, strong, random value in production.
JWT_SECRET="your_jwt_secret_here"


###############################################
# APPLICATION CONFIGURATION
###############################################

# (Optional) Number of seconds to skip ads.
# A value of "0" disables the skip-ad feature entirely.
# NEXT_PUBLIC_SKIP_AD_AFTER_SECONDS="0"


###############################################
# CORE URLS AND API ROUTING
###############################################

# Base URL for the backend service.
NEXT_PUBLIC_BACKEND_URL="http://localhost:8080"

# Base domain for the frontend web app.
NEXT_PUBLIC_BASE_DOMAIN="http://localhost:3000"

# Backend REST API base URL.
# Used for client-side requests through apiFetch().
NEXT_PUBLIC_API_URL="http://localhost:8080/api"


###############################################
# AUTHENTICATION ENDPOINTS
###############################################

# Google OAuth entry URL
NEXT_PUBLIC_GOOGLE_OAUTH_LOGIN_PATH="/google/login"

# Email/password login endpoint
NEXT_PUBLIC_LOGIN_PATH="/api/login"

# Fetch authenticated user information
NEXT_PUBLIC_USER_DETAILS="/user/details"

# Logout endpoint
NEXT_PUBLIC_USER_LOGOUT="/logout"


###############################################
# USER DATA + ACCOUNT ACTIONS
###############################################

# Fetch short links generated by the authenticated user
NEXT_PUBLIC_USER_SHORTLINKS="/user/shortlinks"

# Delete a short link
NEXT_PUBLIC_DELETE_SHORTLINK_ENDPOINT="/api/delete/shortlink"

# Page path for optional short-link / QR creation
NEXT_PUBLIC_OPTIONALCREATION="/dashboard/links/create"


###############################################
# FEATURE FLAGS
###############################################

# If "true", API requests bypass authentication (local development only).
# DO NOT enable in production.
NEXT_PUBLIC_BYPASS_AUTH="false"


###############################################
# ACCESS CONTROL
###############################################

# List of authorized user IDs (comma-separated).
# Intended for restricting certain features/routes.
# Example:
#   ALLOWED_USER_IDS="uuid1,uuid2,uuid3"
# ALLOWED_USER_IDS=""
