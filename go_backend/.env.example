##########################################################
# Application
##########################################################

# Application environment: development | production | test
APP_ENV="development"

# Port used by the Go backend server
PORT="8080"

# Base backend URL
BASE_URL="http://localhost:8080"


##########################################################
# Frontend
##########################################################

# Allowed frontend origin for CORS / auth
FRONTEND_ORIGIN="http://localhost:3000"

# Page where authentication is completed
FRONTEND_REDIRECT_URL="http://localhost:3000/auth/callback"

# Page used for password-reset flow
FRONTEND_RESET_URL="http://localhost:3000/reset"

# Optional ad-redirection page
AD_REDIRECT_URL="http://localhost:3000/ads"


##########################################################
# Authentication
##########################################################

# Google OAuth credentials
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# OAuth callback endpoint at backend
GOOGLE_REDIRECT_URI="http://localhost:8080/google/callback"

# JWT signing secret â€” replace with a secure random key
JWT_SECRET="your_jwt_secret_here"


##########################################################
# Email / SMTP
##########################################################

# SMTP credentials for transactional mail
SMTP_EMAIL="your.email@example.com"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="123"
SMTP_PASS="your_app_specific_password_here"


##########################################################
# External API Keys
##########################################################

# Optional external API integrations
IP_API_KEY="your_ip_api_key_here"
IPGEOLOCATION_API_KEY="your_ipgeolocation_key_here"


##########################################################
# Database & Cache
##########################################################

# Using containerized Redis / Postgres
REDIS_URL="redis://redis:6379"
POSTGRES_URL="postgres://testuser:testpass@postgres:5432/testdb?sslmode=disable"

# Example local dev setup (uncomment if using local services)
# REDIS_URL="redis://localhost:6379"
# POSTGRES_URL="postgres://testuser:testpass@localhost:5432/testdb?sslmode=disable"


##########################################################
# Security & Networking
##########################################################

# Reverse proxy configuration
TRUSTED_PROXY="127.0.0.1"

# Rate-limit requests per user/IP
RATE_LIMIT_MAX="30"
